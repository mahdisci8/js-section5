      .accordin {
        width: 100%;
        margin: 0 auto;
      }
      .accordin-title {
        cursor: pointer;
      }
      .accordin-content {
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.3s ease-in-out;

      }
      .accordin-item.active  .accordin-content{
        max-height: 100px;
      }
    </style>
